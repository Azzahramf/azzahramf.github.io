<script>
    $(document).ready(function(){
        $('.isi').click(function(){
        let isi = $(this).text();
        let tid = $(this).prop('id');
        let rid = tid.split('__');
        let baris_ke = rid[1];
        let nama_bestie = $('#nama_bestie__'+baris_ke).text();
        
        if(isi=='Delete'){
            let yakin = confirm(`Kamu yakin ingin menghapus ${nama_bestie} dari daftar bestie?`);
            if(!yakin) return;
            $('#row__'+baris_ke).fadeOut();
            }else{
            alert('Maaf aksi ini belum ada');
        }
        })
    })
</script>
